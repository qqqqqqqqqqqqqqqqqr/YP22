<Application x:Class="YP22.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YP22"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontFamily"  Value="Century"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily"  Value="Century"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
            <Setter Property="Background" Value="White" ></Setter>
            <Setter Property="Foreground" Value="#FF282A29"></Setter>
            
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FFD8E6E6"></Setter>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FFE8EEED" ></Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="Tb1">
            <Setter Property="Foreground"  Value="{Binding SupplierСountry.Color}"></Setter>
        </Style>
         
    </Application.Resources>
</Application>
