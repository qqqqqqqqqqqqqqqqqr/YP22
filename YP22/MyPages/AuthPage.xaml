<Page x:Class="YP22.MyPages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP22.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Авторизация</TextBlock>


            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock> Логин</TextBlock>
                <TextBox x:Name="TbLogin" Width="200"></TextBox>
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock> Пароль</TextBlock>
                <TextBox x:Name="TbPassword" Width="200"></TextBox>
            </StackPanel>

            <CheckBox Margin="5" x:Name="CbSaveMe" >Запомнить меня</CheckBox>
            <Button x:Name="Auth" Click="Auth_Click" Width="150" Margin="5">Войти</Button>
            <Button x:Name="RegPage" Click="RegPage_Click"  Width="150" Margin="5">Зарегистрироваться</Button>


        </StackPanel>
    </Grid>
</Page>
