<Page x:Class="YP22.MyPages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP22.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="529*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="139*"/>
                <ColumnDefinition Width="861*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="WhiteSmoke"></StackPanel>
            <StackPanel Grid.RowSpan="3" Grid.Column="0" Background="WhiteSmoke"></StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="0">
                <Button>Продукция</Button>
                <Button>Мои заказы</Button>
            </StackPanel>

            <Frame Grid.Column="1" x:Name="MyFrame" Margin="0,50,0,0" Grid.RowSpan="3"/>
        </Grid>
    </Grid>
</Page>
